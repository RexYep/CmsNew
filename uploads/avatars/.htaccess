# Allow image files only
<FilesMatch "\.(jpg|jpeg|png|gif)$">
    Order Allow,Deny
    Allow from all
</FilesMatch>

# Deny PHP execution
<FilesMatch "\.php$">
    Order Allow,Deny
    Deny from all
</FilesMatch>

# Block all executable scripts
<FilesMatch "\.(php|php\d|phtml|phar|cgi|pl|asp|aspx|jsp)$">
    Require all denied
</FilesMatch>